{
  "name": "jihou-bot-project",
  "private": true,
  "workspaces": [
    "discord-bot",
    "front-app",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "husky": "^9.1.7",
    "ts-analyzer": "^1.0.0"
  },
  "scripts": {
    "dev": "bun run --filter discord-bot dev",
    "dev:front": "bun run --filter front-app dev",
    "build": "bun run --filter front-app build",
    "typecheck": "tsc --noEmit -p discord-bot/tsconfig.json && tsc --noEmit -p front-app/tsconfig.json",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "overrides": {
    "hono": "^4.12.1",
    "zod": "^4.3.6"
  }
}
