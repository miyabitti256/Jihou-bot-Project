{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "extends": ["../biome.json"],
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "!.next",
      "!public"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["log"]
          }
        }
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "a11y": {
        "useAltText": "warn",
        "noSvgWithoutTitle": "warn",
        "useSemanticElements": "warn"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
