{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "extends": ["../biome.json"],
  "files": {
    "includes": ["src/**/*.ts", "!src/api/generated/**"]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "error",
        "noBannedTypes": "error",
        "noUselessCatch": "error"
      },
      "performance": {
        "noDelete": "error"
      }
    }
  }
}
